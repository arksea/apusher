<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" monitorInterval="180">
    <Appenders>
        <RollingRandomAccessFile name="file" fileName="logs/server.log" filePattern="logs/backup/server-%d{yyyy-MM-dd}-%i.log.gz">
            <PatternLayout>
                <charset>UTF-8</charset>
                <Pattern>%d{HH:mm:ss.SSS} | %-5level | %msg | %c{1}.%M(%L) | %t | %X{akkaSource}%n</Pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy />
                <SizeBasedTriggeringPolicy size="100 MB"/>
                <CronTriggeringPolicy schedule="0 0 0 * * ?"/>
            </Policies>
            <DefaultRolloverStrategy max="10">
                <Delete basePath="tomcat/logs" maxDepth="2">
                    <IfFileName glob="*/*.log.gz" />
                    <IfLastModified age="7d" />
                </Delete>
                <Delete basePath="tomcat/logs" maxDepth="1">
                    <IfFileName glob="*.log" />
                    <IfLastModified age="3d" />
                </Delete>
            </DefaultRolloverStrategy>
        </RollingRandomAccessFile>
        <Alarm name="alarm" level="error" defaultAlarmSource="weather-data-server" timeout="5000" maxCacheSize="300">
            <AlarmServer host="10.79.186.127" port="9010" />
            <AlarmServer host="10.79.186.48" port="9010" />
            <ClientPool maxIdle="1" minIdle="0" maxTotal="3" testOnBorrow="true"/>
        </Alarm>
    </Appenders>
    <Loggers>
        <!--<Logger name="com.felink.weather.push" level="debug"/>-->
        <!--<Logger name="com.felink.weather.push.apns" level="debug"/>-->
        <!--<Logger name="com.felink.weather.push.apns.cast" level="debug"/>-->
        <!--<Logger name="com.felink.weather.push.apns.sys" level="debug"/>-->
        <Logger name="org.eclipse.jetty.http2.HTTP2Session" level="error"/>
        <Root level="info">
            <AppenderRef ref="file"/>
            <AppenderRef ref="alarm"/>
        </Root>
    </Loggers>
</Configuration>
